import sys

def add(num1, num2):
    return num1 + num2

def subtract(num1, num2):
    return num1 - num2

def multiply(num1, num2):
    return num1 * num2

def divide(num1, num2):
    if num2 == 0:
        return "Error: Cannot divide by zero."
    return num1 / num2

def run_calculator():
    print("Welcome to the Python CLI Calculator!")
    print("Available operations: add (+), subtract (-), multiply (*), divide (/)")

    while True:
        print("\n" + "="*40)
        choice = input(
            "Enter operation symbol (+, -, *, /) or type 'exit' to quit: "
        ).lower().strip()
        if choice == 'exit':
            print("Thank you for using the calculator. Goodbye!")
            break
        if choice not in ('+', '-', '*', '/'):
            print("Invalid choice. Please enter a valid operation symbol or 'exit'.")
            continue

        try:
            num1 = float(input("Enter first number: "))
            num2 = float(input("Enter second number: "))

        except ValueError:
            print("Invalid input. Please enter valid numerical values.")
            continue

        result = None
        operation_name = ""

        if choice == '+':
            result = add(num1, num2)
            operation_name = "Addition"
        elif choice == '-':
            result = subtract(num1, num2)
            operation_name = "Subtraction"
        elif choice == '*':
            result = multiply(num1, num2)
            operation_name = "Multiplication"
        elif choice == '/':
            result = divide(num1, num2)
            operation_name = "Division"

        if isinstance(result, str) and "Error" in result:
            print(f"\n{result}")
        else:
            print(f"\n{operation_name} Result: {num1} {choice} {num2} = {result}")


if __name__ == "__main__":
    run_calculator()
